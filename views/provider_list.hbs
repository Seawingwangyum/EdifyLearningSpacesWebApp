<!DOCTYPE html>
<head>
	<title>Provider</title>
    <link href='style.css' rel='stylesheet' type='text/css'/>
	<link href='provider_list.css' rel='stylesheet' type='text/css'/>
	
</head>

<body>
	{{> navbar_logout}}

	<div id='main'>
        <div id='title'>Providers</div>
        <form id='header' method='POST' action='/provider_list'>
            <div class='row'>
                <input type="number" name="Idsearch" placeholder="ID Number"/>
                <select id="optionbox" name="querytype">
                    <option value="all">All applicants</option>
                    <option value="Awaiting Approval">Awaiting approval</option>
                    <option value="Awaiting Submission">Awaiting submission</option>
                    <option value="Approved Granted">Approval granted</option>
                    <option value="Approval Denied">Approval denied</option>
                </select>
            </div>
            <div class='row'>
                <input type="text" name="fnamesearch" placeholder="First Name"/>
                <input type="text" name="lnamesearch" placeholder="Last Name"/>
                <input class="purple_button" type="submit" value="Search"/>
            </div>
            <div class='row'>
                <h2 class='id'>Id number</h2>
                <h2 class='fname'>First name</h2>
                <h2 class='lname'>Last name</h2>
                <h2 class='status'>Status</h2>
                <h2 class='city'>City</h2>
            </div>
        </form>

        <div id='list'>
            {{#each userData as |provider|}}
                <form class='providers' method='GET' action='/provider_edit'>
                    <input type='submit'  value='' class='goto_provider'/>
                    <input class='id' name='user_id' value='{{provider.id}}'/>
                    <input class='fname' name='fname' value='{{provider.firstName}}'/>
                    <input class='lname' name='lname' value='{{provider.lastName}}'/>
                    <input class='status' name='status' value='{{provider.status}}'/>
                    <input class='city' name='location' value='{{provider.location}}'/>
                </form>
            {{/each}}
        </div>
	</div>
</body>
